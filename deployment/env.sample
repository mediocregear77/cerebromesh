# File: deployment/env.sample

# === CerebroMesh Deployment Environment Variables ===

# Path to local LLM model (quantized .gguf format)
MODEL_PATH=models/mistral_quantized.gguf

# Path to memory mesh file (event replay and audit)
MEMORY_FILE=mesh_data/mesh_memory.json

# Stripe API key for marketplace monetization
STRIPE_API_KEY=sk_test_your_test_key_here

# Optional embedding dimensions
EMBEDDING_DIMENSIONS=8

# API default port
PORT=8000

# Environment tag for deployment (dev, staging, prod)
ENVIRONMENT=dev

# Debug logging
DEBUG=True
